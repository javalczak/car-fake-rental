{% extends 'admin-base.html.twig' %}
{% block content %}

   <h2>Lista użytkowników pojazdów</h2>
   <hr>

   {% for message in app.flashes('error') %}
      <div class="alert alert-danger" role="alert">
         {{ message }}
      </div>
   {% endfor %}

   {% for message in app.flashes('success') %}
      <div class="alert alert-success" role="alert">
         {{ message }}
      </div>
   {% endfor %}

   <table class="table table-striped">
      <thead>
      <tr>
         <th scope="col">#</th>
         <th scope="col">Imię i nazwisko</th>
         <th scope="col">Miasto</th>
         <th scope="col">Kod wypożyczenia</th>
         <th scope="col"></th>
      </tr>
      </thead>
      <tbody>

      {% for key, value in customerArray %}

         <tr>
            <th scope="row">{{ key + 1 }}</th>
            <td>{{ customerArray[key]['fullName'] }} <br><span style="font-size: 11px; font-style: italic;">{{ customerArray[key]['address'] }}</span></td>
            <td>{{ customerArray[key]['city'] }}</td>
            <td style="text-transform: uppercase; font-size: 22px;">{{ customerArray[key]['idNumber'] }}</td>

            <td></td>
            <td>
               <a onclick="return confirm('Potwierdź usunięcie');" href="/admin/customer-list?deleteId={{ customerArray[key]['id'] }}"><input class="button red" type="button" value="delete"></a>
               <a href="/admin/customer-edit?customerId={{ customerArray[key]['id'] }}"><input class="button orange" type="button" value="edytuj"></a>
            </td>
         </tr>

      {% endfor %}

      </tbody>
   </table>

{% endblock %}