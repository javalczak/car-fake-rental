<div ng-controller="releaseVehicleController">
    <h1>Wynajmij pojazd</h1>
    <hr>
    <div  ng-if="messageOk" class="alert alert-success" role="alert">{[{ messageOk }]}</div>
    <div  ng-if="messageFalse" class="alert alert-danger" role="alert">{[{ messageFalse }]}</div>
    <h5>Wypełnij poniższy formularz:</h5>

        <div class="alert alert-secondary" role="alert">
                Zwalniasz auto: {{ vehicleName }}
        </div>

        <form method="POST">
            <input type="hidden" id="vehicleId" title="{{ vehicleId }}"/>
            <label for="rentalCode">
                kod wypożyczenia:
                <input type="text" id="rentalCode" name="rentalCode"  ng-model="rentalData.rentalCode" placeholder="rentalCode" required>
            </label>
            <button type="submit" class="submit-button" ng-click="submitFormRent()">wyślij</button>
        </form>
</div>