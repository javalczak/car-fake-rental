{% extends 'base.html.twig' %}
{% block body %}
    <div ng-app="vehicleApp" ng-controller="VehicleController">

    <h1>{[{ message }]}</h1>

    <table class="vehicleTable">
        <thead>
        <tr>
            <th>ID</th>
            <th>Pojazd</th>
            <th>Paliwo</th>
            <th>Blacha</th>
            <th>W serwisie</th>
            <th>W w użyciu</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="vehicle in vehicles">
            <td>{[{ vehicle.id }]}</td>
            <td>{[{ vehicle.brand }]} {[{vehicle.type}]}</td>
            <td>{[{ vehicle.fuelType }]}</td>
            <td>{[{ vehicle.plate }]}</td>
            <td>{[{ vehicle.Maintenance == true ? 'Tak' : 'Nie' }]}</td>
            <td></td>
            <td>
                <a href="/admin/vehicle-reserve?vehicleId={[{ vehicle.id }]}"><input class="button orange" type="button" value="zarezerwuj"></a>
                <a href="/admin/vehicle-return?vehicleId={[{ vehicle.id }]}"><input class="button green" type="button" value="zwróć"></a>



            </td>

        </tr>
        </tbody>
    </table>
</div>
{% endblock %}



